#include <dht.h> #include <LiquidCrystal.h>

dht DHT;

LiquidCrystal lcd(12, 11, 5, 4, 3, 2); int tempDelay=2000; int humidDelay=2000; #define DHT11_PIN 13

void setup(){
Serial.begin(9600); lcd.begin(16,2); lcd.print("Hello!");
}

void loop() {

int chk = DHT.read11(DHT11_PIN); Serial.print("Temperature = "); Serial.println(DHT.temperature); Serial.print("Humidity = "); Serial.println(DHT.humidity); delay(1000);

lcd.clear(); lcd.setCursor(1,0); lcd.print("Temp: "); lcd.print(DHT.temperature); lcd.print(" C"); delay(tempDelay); lcd.setCursor(1,1); lcd.print("Humidity: "); lcd.print((int)DHT.temperature); lcd.print(" %"); delay(humidDelay); lcd.clear();

}
